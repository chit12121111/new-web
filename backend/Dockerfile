FROM node:20-slim

# Install OpenSSL for Prisma (Debian-based images have better Prisma compatibility)
RUN apt-get update && \
    apt-get install -y openssl && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install all dependencies (including devDependencies for build)
RUN npm ci && npm cache clean --force

# Copy source code
COPY . .

# Generate Prisma Client
RUN npm run prisma:generate

# Build application with verification
RUN echo "üî® Starting build..." && \
    npm run build && \
    echo "‚úÖ Build completed" && \
    echo "üìÅ Contents after build:" && ls -la && \
    echo "üìÅ Dist folder:" && (ls -la dist/ || echo "‚ùå dist/ folder does not exist!") && \
    echo "üìÅ Dist/src folder:" && (ls -la dist/src/ || echo "‚ùå dist/src/ folder does not exist!") && \
    if [ ! -f dist/src/main.js ]; then \
        echo "‚ùå ERROR: dist/src/main.js not found after build!" && \
        echo "üìÅ Searching for main.js:" && \
        find dist -name "main.js" -type f 2>/dev/null && \
        echo "üìÅ Searching for .js files:" && \
        find dist -name "*.js" -type f 2>/dev/null | head -20 && \
        exit 1; \
    else \
        echo "‚úÖ dist/src/main.js found!" && \
        ls -lh dist/src/main.js; \
    fi

# Remove devDependencies after build to reduce image size
RUN npm prune --production && npm cache clean --force

# Verify dist still exists after prune
RUN if [ ! -f dist/src/main.js ]; then \
        echo "‚ùå ERROR: dist/src/main.js was removed after prune!" && \
        exit 1; \
    else \
        echo "‚úÖ dist/src/main.js still exists after prune"; \
    fi

# Expose port
EXPOSE 4000

# Health check - ‡πÄ‡∏û‡∏¥‡πà‡∏° start-period ‡πÅ‡∏•‡∏∞ retries
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=5 \
  CMD node -e "require('http').get('http://localhost:' + (process.env.PORT || 4000) + '/api/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# Start application with debug output and error handling
CMD ["sh", "-c", "echo 'üöÄ Starting application...' && echo 'üìÅ Current directory:' && pwd && echo 'üìÅ Contents:' && ls -la && echo 'üìÅ Dist folder:' && (ls -la dist/ 2>/dev/null || echo '‚ùå dist/ folder does not exist!') && echo 'üìÅ Dist/src folder:' && (ls -la dist/src/ 2>/dev/null || echo '‚ùå dist/src/ folder does not exist!') && if [ ! -f dist/src/main.js ]; then echo '‚ùå ERROR: dist/src/main.js not found in container!' && find dist -name 'main.js' 2>/dev/null && exit 1; fi && echo '‚úÖ dist/src/main.js found' && echo 'üîç Environment variables:' && echo 'PORT='${PORT:-4000} && echo 'DATABASE_URL='${DATABASE_URL:+SET} && echo 'üìä Step 1: Running migrations...' && if npm run prisma:deploy 2>&1; then echo '‚úÖ Migrations applied successfully'; else echo '‚ö†Ô∏è Step 2: Migration failed, attempting to resolve...' && npx prisma migrate resolve --applied 20251203081739_add_huggingface_api_key 2>&1 || echo '‚ö†Ô∏è Could not resolve migration' && echo '‚ö†Ô∏è Step 3: Retrying migrations...' && if npm run prisma:deploy 2>&1; then echo '‚úÖ Migrations applied after resolve'; else echo '‚ö†Ô∏è Step 4: Migration still failed, syncing schema with db push...' && echo 'üîÑ Running: npx prisma db push --accept-data-loss --skip-generate' && npx prisma db push --accept-data-loss --skip-generate 2>&1 && echo '‚úÖ Schema synced successfully with db push' || echo '‚ö†Ô∏è Could not sync schema, but continuing...'; fi; fi && echo '‚úÖ Starting application on port '${PORT:-4000}'...' && exec npm run start:prod"]
