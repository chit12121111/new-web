FROM node:20-slim

# Install OpenSSL for Prisma (Debian-based images have better Prisma compatibility)
RUN apt-get update && \
    apt-get install -y openssl && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install all dependencies (including devDependencies for build)
RUN npm ci && npm cache clean --force

# Copy source code
COPY . .

# Generate Prisma Client
RUN npm run prisma:generate

# Build application with verification
RUN echo "ğŸ”¨ Starting build..." && \
    npm run build && \
    echo "âœ… Build completed" && \
    echo "ğŸ“ Contents after build:" && ls -la && \
    echo "ğŸ“ Dist folder:" && (ls -la dist/ || echo "âŒ dist/ folder does not exist!") && \
    echo "ğŸ“ Dist/src folder:" && (ls -la dist/src/ || echo "âŒ dist/src/ folder does not exist!") && \
    if [ ! -f dist/src/main.js ]; then \
        echo "âŒ ERROR: dist/src/main.js not found after build!" && \
        echo "ğŸ“ Searching for main.js:" && \
        find dist -name "main.js" -type f 2>/dev/null && \
        echo "ğŸ“ Searching for .js files:" && \
        find dist -name "*.js" -type f 2>/dev/null | head -20 && \
        exit 1; \
    else \
        echo "âœ… dist/src/main.js found!" && \
        ls -lh dist/src/main.js; \
    fi

# Remove devDependencies after build to reduce image size
RUN npm prune --production && npm cache clean --force

# Verify dist still exists after prune
RUN if [ ! -f dist/src/main.js ]; then \
        echo "âŒ ERROR: dist/src/main.js was removed after prune!" && \
        exit 1; \
    else \
        echo "âœ… dist/src/main.js still exists after prune"; \
    fi

# Expose port
EXPOSE 4000

# Health check - à¹€à¸à¸´à¹ˆà¸¡ start-period à¹à¸¥à¸° retries
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=5 \
  CMD node -e "require('http').get('http://localhost:' + (process.env.PORT || 4000) + '/api/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# Start application with debug output and error handling
CMD ["sh", "-c", "echo 'ğŸš€ Starting application...' && echo 'ğŸ“ Current directory:' && pwd && echo 'ğŸ“ Contents:' && ls -la && echo 'ğŸ“ Dist folder:' && (ls -la dist/ 2>/dev/null || echo 'âŒ dist/ folder does not exist!') && echo 'ğŸ“ Dist/src folder:' && (ls -la dist/src/ 2>/dev/null || echo 'âŒ dist/src/ folder does not exist!') && if [ ! -f dist/src/main.js ]; then echo 'âŒ ERROR: dist/src/main.js not found in container!' && find dist -name 'main.js' 2>/dev/null && exit 1; fi && echo 'âœ… dist/src/main.js found' && echo 'ğŸ” Environment variables:' && echo 'PORT='${PORT:-4000} && echo 'DATABASE_URL='${DATABASE_URL:+SET} && echo 'ğŸ“Š Running migrations...' && npm run prisma:deploy || (echo 'âš ï¸ Migration failed, but continuing...' && sleep 2) && echo 'âœ… Starting application on port '${PORT:-4000}'...' && exec npm run start:prod"]

